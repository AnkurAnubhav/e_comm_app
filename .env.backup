# ===========================================
# ECOMMERCE APP ENVIRONMENT VARIABLES
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=e_comm_app
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# SESSION CONFIGURATION
# ===========================================
# Generate a secure random string for production
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=f4z4gs$Gcg

# Session timeout in milliseconds (current: ~3.5 days)
SESSION_MAX_AGE=300000000

# Set to true in production with HTTPS
SESSION_SECURE=false

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Global rate limit window (15 minutes in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Registration rate limit (1 hour in milliseconds)
REGISTRATION_RATE_LIMIT_WINDOW_MS=3600000

# Maximum registration attempts per window
REGISTRATION_RATE_LIMIT_MAX=5

# ===========================================
# BCRYPT CONFIGURATION
# ===========================================
# Number of salt rounds for password hashing (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS allowed origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# BUSINESS LOGIC CONFIGURATION
# ===========================================
# Default order status
DEFAULT_ORDER_STATUS=PENDING

# Default created by user for system operations
SYSTEM_USER=admin

# ===========================================
# DEVELOPMENT/DEBUGGING
# ===========================================
# Enable detailed error messages in development
ENABLE_DEBUG_ERRORS=true

# Enable SQL query logging
ENABLE_SQL_LOGGING=false

